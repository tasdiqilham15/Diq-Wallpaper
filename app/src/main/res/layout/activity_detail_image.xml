<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailImageActivty">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="16dp"/>

        <TableLayout
            android:id="@+id/tb_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_image"
            android:paddingHorizontal="5dp">

            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_download"
                    android:layout_weight="0.1"
                    android:layout_marginVertical="3dp"/>
                <TextView
                    android:id="@+id/detail_download"
                    android:layout_height="30dp"
                    android:layout_width="wrap_content"
                    android:text="100"
                    android:textSize="18sp"
                    android:layout_weight="0.2"
                    android:textColor="@color/black"
                    android:layout_marginVertical="3dp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/icon_view"
                    android:layout_weight="0.1"
                    android:layout_marginVertical="3dp"/>
                <TextView
                    android:id="@+id/detail_view"
                    android:layout_height="30dp"
                    android:layout_width="wrap_content"
                    android:text="100"
                    android:textSize="18sp"
                    android:layout_weight="0.2"
                    android:textColor="@color/black"
                    android:layout_marginVertical="3dp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/icon_like"
                    android:layout_weight="0.1"
                    android:layout_marginVertical="3dp" />
                <TextView
                    android:id="@+id/detail_likes"
                    android:layout_height="30dp"
                    android:layout_width="wrap_content"
                    android:text="100"
                    android:textSize="18sp"
                    android:layout_weight="0.2"
                    android:textColor="@color/black"
                    android:layout_marginVertical="3dp"
                    android:gravity="center_vertical"/>
            </TableRow>


        </TableLayout>
        <RelativeLayout
            android:id="@+id/rl_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/tb_icon"
            android:paddingStart="8dp">
            <TextView
                android:id="@+id/by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picture by :"
                android:textSize="18sp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#009688"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@+id/by"
                android:id="@+id/detail_civ_user"
                android:layout_marginTop="3dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/detail_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahenol"
                android:textSize="24sp"
                android:layout_toEndOf="@+id/detail_civ_user"
                android:layout_alignTop="@+id/detail_civ_user"
                android:layout_alignBottom="@+id/detail_civ_user"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_by"
            android:layout_margin="8dp"
            android:paddingStart="10dp">
            <TableRow
                android:layout_marginVertical="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Width"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="0.3" />
                <TextView
                    android:id="@+id/detail_width"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="200px"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_marginVertical="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="0.3" />
                <TextView
                    android:id="@+id/detail_heigth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="200px"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_marginVertical="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="0.3" />
                <TextView
                    android:id="@+id/detail_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4mb"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_marginVertical="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tags"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="0.3" />
                <TextView
                    android:id="@+id/detail_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Teknologi"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>


</ScrollView>